<script>
document.getElementById("leadForm").addEventListener("submit", function(e){
  e.preventDefault();

  const formData = new FormData(this);
  const url = "COLE_AQUI_O_URL_DO_WEBAPP"; // substitui pelo teu URL do Google Apps Script

  fetch(url, {
    method: "POST",
    body: formData
  })
  .then(res => res.json())
  .then(data => {
    if(data.result === "success") {
      alert("Obrigado pelo seu interesse! Um consultor entrará em contato em breve.");
      this.reset();
    } else {
      alert("Ocorreu um erro. Tente novamente.");
      console.error(data.error);
    }
  })
  .catch(err => {
    alert("Ocorreu um erro de rede.");
    console.error(err);
  });
});
</script>

